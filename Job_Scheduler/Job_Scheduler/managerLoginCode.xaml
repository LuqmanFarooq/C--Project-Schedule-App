<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Job_Scheduler.managerLoginCode">
    <ContentPage.Content>
        <StackLayout>
            <Image  Source="mainLogo.png"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Start" />
            <Label x:Name="entrCode"
               Text="Enter Code to Login as a Manager"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="Large"
               Margin="10,10,10,30"/>
            <Entry x:Name="codeInput"
                   Placeholder="Enter Code Here"
                   IsPassword="True"
                   Keyboard="Numeric"
                   MaxLength="4"
                   HorizontalOptions="Center"
                   WidthRequest="200"/>
            <Button x:Name="sendCodeBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Send Code"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"
                    Clicked="sendCodeBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>