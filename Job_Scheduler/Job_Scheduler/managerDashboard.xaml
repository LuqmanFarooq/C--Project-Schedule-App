<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Job_Scheduler.managerDashboard">
    <ContentPage.Content>
        <StackLayout>
            <Image  Source="Assets/images/schedule_logo.png"
                WidthRequest="200"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <Label x:Name="wlcmMsg"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Welcom to Scheduler"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="Large"
               Margin="10,10,10,30"/>
            <Button x:Name="createBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Create New Schedule"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"
                    Clicked="createBtn_Clicked"/>
            <Button x:Name="modiftBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Modify Existing Schedule"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"/>
            <Button x:Name="deleteBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Delete Schedule"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"/>
            <Button x:Name="ShowBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Show Schedule"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>