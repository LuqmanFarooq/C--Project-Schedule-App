<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Job_Scheduler.employeeDashboard">
    <ContentPage.Content>
        <StackLayout>
            <!-- Main App Logo -->
            <Image  Source="mainLogo.png"
                WidthRequest="200"
           HorizontalOptions="Center"
           VerticalOptions="Start" />
            <!-- Welcome message by the label -->
            <Label x:Name="wlcmMsg"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Scheduler"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="Large"
               Margin="10,10,10,30"/>
            <!-- show schedule button -->
            <Button x:Name="ShowBtn"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="Show Schedule"
                TextColor="White"
                FontAttributes="Bold"
                BackgroundColor="DeepSkyBlue"
                CornerRadius="12"
                    Clicked="ShowBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>